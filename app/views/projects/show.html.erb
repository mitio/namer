<h2>
  <%= @project.display_name.humanize %>

  <% if @project.owned_by? current_user %>
    <small>
      <%= link_to '(edit)', edit_project_path(@project) %>
    </small>
  <% end %>
</h2>

<% if @project.description.present? %>
  <blockquote>
    <%= simple_format @project.description %>
  </blockquote>
<% end %>

<h4>Current name suggestions</h4>

<% if @project.suggestions.any? %>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>What do you think?</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @project.suggestions.in_alphabetical_order.each do |suggestion| %>
        <tr>
          <td><%= suggestion.name %></td>
          <td>
            <%= simple_form_for [@project, suggestion, suggestion.vote_by(current_user)], html: {class: 'vote-form'} do |f| %>
              <%= f.input :vote, as: :radio, collection: vote_types %>
              <%= f.button :submit, 'Save' %>
            <% end %>
          </td>
          <td><%= render 'suggestions/delete_button', suggestion: suggestion %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>
    No name suggestions yet.
    <%= link_to 'Add your own!', new_project_suggestion_path(@project) %>
  </p>
<% end %>

<p>
  <%= link_to 'Suggest a new name', new_project_suggestion_path(@project), class: 'btn btn-small btn-success' %>
</p>
