<h2>
  <%= @project.display_name.humanize %>

  <% if @project.owned_by? current_user %>
    <small>
      <%= link_to t('.edit'), edit_project_path(@project) %>
      <%= link_to t('.results'), project_results_path(@project) %>
    </small>
  <% end %>
</h2>

<% if @project.description.present? %>
  <blockquote>
    <%= simple_format @project.description %>
  </blockquote>
<% end %>

<h4><%= t '.name_suggestions' %></h4>

<% if @project.suggestions.any? %>
  <table class="table suggestions">
    <thead>
      <tr>
        <th class="name"><%= t '.name' %></th>
        <th class="vote"><%= t '.your_vote' %></th>
      </tr>
    </thead>
    <tbody>
      <% @project.suggestions.in_alphabetical_order.each do |suggestion| %>
        <%= render suggestion %>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>
    <%= t '.no_suggestions' %>
    <%= link_to t('.add_suggestion'), new_project_suggestion_path(@project) %>
  </p>
<% end %>

<p>
  <%= link_to t('.suggest_name'), new_project_suggestion_path(@project), class: 'btn btn-small btn-success' %>
</p>
