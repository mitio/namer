<%= simple_form_for @project, html: {class: 'form-vertical'} do |f| %>
  <fieldset>
    <legend><%= t '.new_project' %></legend>
    <%= render 'form_fields', f: f %>
  </fieldset>

  <div class="form-actions">
    <%= f.button :submit, t('.create'), class: 'btn btn-success' %>
    <%= t 'texts.or' %>
    <%= link_to t('.go_home'), root_path %>
  </div>
<% end %>
