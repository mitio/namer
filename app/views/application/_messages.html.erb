<% if flash.any? %>
  <div class="container">
    <% flash.each do |type, message| %>
      <div class="alert alert-<%= flash_to_alert_type type %>">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= message %>
      </div>
    <% end %>
  </div>
<% end %>
